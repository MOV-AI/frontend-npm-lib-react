{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "baseUrl": "./src",
    "rootDir": "./src",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "types": ["node", "jest", "testing-library__jest-dom"]
  },
  "include": ["src/**/*", "typings.d.ts", "dist/@mov-ai/*"]
}
