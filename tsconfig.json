{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/",
        "sourceMap": true,
        "strictNullChecks": true,
        "module": "ESNext",
	"declaration": true,
        "jsx": "react",
        "target": "es6",
        "allowJs": true,
	"esModuleInterop": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
	"downlevelIteration": true,
	"experimentalDecorators": true,
	"useDefineForClassFields": false,
        "lib": [
            "es2021",
            "dom"
        ],
        "types": [
		"node",
		"react",
		"jest"
        ]
    },
    "exclude": [
        "**/*.test.*",
	"./dist/",
	"./htdocs/"
    ],
    "include": ["src/**/*", "typings.d.ts", "./jest.setup.ts"],
    "include": [
        "./src/",
        "./lib/"
    ],
    "transform": {},
    "ts-node": {
	    "esm": true,
	    "experimentalSpecifierResolution": "node"
    }
}
