{
  "compilerOptions": {
    "target": "es5",
    "module": "es2020",
    "baseUrl": "./src",
    "rootDir": "./src",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "types": ["node", "jest", "testing-library__jest-dom"]
  },
  "include": ["src/**/*", "typings.d.ts", "dist/@mov-ai/*"]
}
